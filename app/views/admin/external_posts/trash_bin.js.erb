(function(){
  var btnSelector = '.trash-bin-post-btn',
      postWrapper = '#external-post-id-',
      postId = '<%= @external_post.id %>',
      $postEl = $(postWrapper + postId),
      $btn = $postEl.find(btnSelector),
      $repostBtn = $postEl.find('.repost-wrapper');

  $btn.attr({
    'href': null,
    'disabled': 'disabled'
  });
  $btn.text('trash binned');

  $repostBtn.prev().remove();
  $repostBtn.remove();
})();
